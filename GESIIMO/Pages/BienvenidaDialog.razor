

<MudDialog ClassActions="mt-1 mb-3 mr-4" Style="max-height: 350px; overflow-y: scroll">
    <TitleContent>
        <MudText Typo="Typo.h6" Class="d-flex justify-content-center">@nombre</MudText>
    </TitleContent>

    <DialogContent>
        <MudGrid>
            <MudText Typo="Typo.body1" Class="d-flex justify-content">Bienvenido al aplicativo Responder Virtual</MudText>

        </MudGrid>
    </DialogContent>

    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Success" ButtonType="ButtonType.Submit" OnClick="OnOk">Aceptar</MudButton>
    </DialogActions>

</MudDialog>



@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public string nombre { get; set; }



    protected override async Task OnInitializedAsync()
    {
        MudDialog.SetTitle("Bienvenido");
    }

    private void OnOk()
    {
        MudDialog.Cancel();
    }
}
